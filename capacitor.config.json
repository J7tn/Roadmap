{
  "appId": "com.careeratlas.roadmap",
  "appName": "Careering",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["*"]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#ffffff",
      "showSpinner": false,
      "spinnerColor": "#3b82f6",
      "androidSplashResourceName": "splash",
      "splashFullScreen": false,
      "splashImmersive": false,
      "launchAutoHide": true,
      "androidScaleType": "CENTER_INSIDE",
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "splashScreenImage": "assets/splash.png",
      "androidSplashScreenImage": "splash",
      "androidSplashScreenImageResourceName": "splash"
    },
    "StatusBar": {
      "style": "default",
      "backgroundColor": "#ffffff",
      "overlaysWebView": false
    }
  }
}
